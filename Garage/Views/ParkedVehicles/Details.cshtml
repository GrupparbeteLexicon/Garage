@using Garage.Extensions
@model Garage.ViewModels.ParkingVehicleViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="card shadow-sm my-4" style="max-width: 600px; margin:auto;">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Vehicle Details</h4>
    </div>
    <div class="card-body">
        <dl class="row mb-3">
            <dt class="col-sm-4">Registration</dt>
            <dd class="col-sm-8 text-uppercase">@Model.Registration</dd>

<div>
    <h4>
        @Model.Brand @Model.Model
    </h4>    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Registration)
        </dt>
        <dd class="col-sm-10">
            <span class="text-uppercase">
            @Html.DisplayFor(model => model.Registration)
            </span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wheels)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wheels)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParkTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParkTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParkedDuration)
        </dt>
        <dd class = "col-sm-10">
            @Model.ParkedDuration.ParkedDurationString()
        </dd>
    </dl>
    <a asp-action="Unpark" asp-route-id="@Model?.Id" class="btn btn-primary">Checkout</a>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
