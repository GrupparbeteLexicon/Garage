@model Garage.ViewModels.CreateOrEditViewModel;

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<input type="hidden" asp-for="ParkedVehicle.Id" />
<div class="form-group">
    <label asp-for="ParkedVehicle.VehicleType" class="control-label"></label>
    <select asp-for="ParkedVehicle.VehicleType" asp-items="Model.VehicleTypeList" class="form-select">
        <option value="" selected disabled>--- Select vehicle Type ---</option>
    </select>
    <span asp-validation-for="ParkedVehicle.VehicleType" class="text-danger"></span>
    <span asp-validation-for="ParkedVehicle.VehicleType" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ParkedVehicle.Registration" class="control-label"></label>
    <input asp-for="ParkedVehicle.Registration" class="form-control" />
    <span asp-validation-for="ParkedVehicle.Registration" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ParkedVehicle.Color" class="control-label"></label>
    <input asp-for="ParkedVehicle.Color" class="form-control" />
    <span asp-validation-for="ParkedVehicle.Color" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ParkedVehicle.Brand" class="control-label"></label>
    <input asp-for="ParkedVehicle.Brand" class="form-control" />
    <span asp-validation-for="ParkedVehicle.Brand" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ParkedVehicle.Model" class="control-label"></label>
    <input asp-for="ParkedVehicle.Model" class="form-control" />
    <span asp-validation-for="ParkedVehicle.Model" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ParkedVehicle.Wheels" class="control-label"></label>
    <input asp-for="ParkedVehicle.Wheels" class="form-control" />
    <span asp-validation-for="ParkedVehicle.Wheels" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ParkedVehicle.ParkTime" class="control-label"></label>
    <input asp-for="ParkedVehicle.ParkTime" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}"
        disabled="@(Model.DisableEditParkTime ? "disabled" : null)" 
        readonly="@(Model.DisableEditParkTime)" />
    <span asp-validation-for="ParkedVehicle.ParkTime" class="text-danger"></span>
</div>