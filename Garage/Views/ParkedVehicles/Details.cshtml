@model Garage.Models.ParkedVehicle

<div class="park-form-card">

    <h3 class="mb-2 fw-bold">Vehicle Details</h3>
    <p class="text-muted mb-3">Information about this parked vehicle</p>

    <hr />

    <div class="row">

        <!-- LEFT: future photo -->
        <div class="col-md-4 mb-4 d-flex flex-column align-items-center justify-content-start">
            <div class="vehicle-photo-box">
                <span class="placeholder-text">
                    Vehicle Photo<br />
                    (coming soon)
                </span>
            </div>
        </div>


        <!-- RIGHT: details -->
        <div class="col-md-8">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="detail-label">Vehicle Type</label>
                    <div class="detail-value">
                        @Model.VehicleType
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="detail-label">Registration</label>
                    <div class="detail-value text-uppercase">
                        @Model.Registration
                    </div>
                </div>

                

                <div class="col-md-6 mb-3">
                    <label class="detail-label">Color</label>
                    <div class="detail-value">
                        @Model.Color
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="detail-label">Brand</label>
                    <div class="detail-value">
                        @Model.Brand
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="detail-label">Model</label>
                    <div class="detail-value">
                        @Model.Model
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="detail-label">Number of Wheels</label>
                    <div class="detail-value">
                        @Model.Wheels
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <label class="detail-label">Parked Since</label>
                    <div class="detail-value">
                        @Model.ParkTime
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-between mt-3">

        <a asp-action="Index" class="btn btn-dark-glass">
            Back
        </a>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark-glass">
                Edit
            </a>

            <a asp-action="Unpark" asp-route-id="@Model.Id" class="btn btn-dark-glass">
                Checkout
            </a>
        </div>

    </div>

</div>
