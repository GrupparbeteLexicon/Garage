@model Garage.Models.ParkedVehicle

@{
    ViewData["Title"] = "Checkout Vehicle";
}

<div class="park-form-card">

    <h3 class="fw-bold">Checkout Vehicle</h3>
    <p class="text-muted">Confirm vehicle before releasing it from parking</p>

    <hr />

    <div class="row g-4">

        <!-- Photo placeholder -->
        <div class="col-md-4">
            <div class="vehicle-photo-box">
                Vehicle Photo
                <br />
                (coming soon)
            </div>
        </div>

        <!-- Details -->
        <div class="col-md-8">
            <div class="row">

                <div class="col-md-6 mb-3">
                    <div class="detail-label">Registration</div>
                    <div class="detail-value">@Model.Registration</div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="detail-label">Vehicle Type</div>
                    <div class="detail-value">@Model.VehicleType</div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="detail-label">Color</div>
                    <div class="detail-value">@Model.Color</div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="detail-label">Brand</div>
                    <div class="detail-value">@Model.Brand</div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="detail-label">Model</div>
                    <div class="detail-value">@Model.Model</div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="detail-label">Number of Wheels</div>
                    <div class="detail-value">@Model.Wheels</div>
                </div>

                <div class="col-md-12 mb-3">
                    <div class="detail-label">Parked Since</div>
                    <div class="detail-value">@Model.ParkTime</div>
                </div>

            </div>
        </div>

    </div>

    <div class="d-flex justify-content-between mt-4">

        <a asp-action="Index" class="btn btn-dark btn-sm px-4 py-2"
           style="opacity: .85; border-radius: 12px;">
            Cancel
        </a>

        <form asp-action="Unpark">
            <input type="hidden" asp-for="Id" />
            <button type="submit"
                    class="btn btn-danger btn-sm px-4 py-2"
                    style="border-radius: 12px;">
                Checkout
            </button>
        </form>

    </div>

</div>
