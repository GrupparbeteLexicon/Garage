@model Garage.ViewModels.CreateOrEditViewModel

@{
    ViewData["Title"] = "Edit Vehicle";
}

<div class="park-form-card">

    <h3 class="mb-2 fw-bold">Edit Vehicle</h3>
    <p class="text-muted mb-3">Update vehicle details below</p>

    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="ParkedVehicle.Id" />

        <div class="row">

            <!-- LEFT: Photo -->
            <div class="col-md-4 mb-4 d-flex flex-column align-items-center justify-content-start">
                <div class="vehicle-photo-box">
                    <span class="placeholder-text">
                        Vehicle Photo<br />
                        (coming soon)
                    </span>
                </div>
            </div>

            <!-- RIGHT: FORM -->
            <div class="col-md-8">

                <div class="row">

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Vehicle Type</label>
                        <select name="selectedVehicleType"
                                asp-for="SelectedVehicleType"
                                asp-items="Model.VehicleTypeList"
                                class="form-select">
                            <option value="" disabled>--- Select vehicle type ---</option>
                        </select>
                        <span asp-validation-for="ParkedVehicle.VehicleType" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Registration" class="form-label fw-semibold"></label>
                        <input asp-for="ParkedVehicle.Registration" class="form-control" />
                        <span asp-validation-for="ParkedVehicle.Registration" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Color" class="form-label fw-semibold"></label>
                        <input asp-for="ParkedVehicle.Color" class="form-control" />
                        <span asp-validation-for="ParkedVehicle.Color" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Brand" class="form-label fw-semibold"></label>
                        <input asp-for="ParkedVehicle.Brand" class="form-control" />
                        <span asp-validation-for="ParkedVehicle.Brand" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Model" class="form-label fw-semibold"></label>
                        <input asp-for="ParkedVehicle.Model" class="form-control" />
                        <span asp-validation-for="ParkedVehicle.Model" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Wheels" class="form-label fw-semibold"></label>
                        <input asp-for="ParkedVehicle.Wheels" class="form-control" />
                        <span asp-validation-for="ParkedVehicle.Wheels" class="text-danger"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <label asp-for="ParkedVehicle.ParkTime" class="form-label fw-semibold"></label>
                        <input asp-for="ParkedVehicle.ParkTime"
                               class="form-control"
                               type="datetime-local"
                               asp-format="{0:yyyy-MM-ddTHH:mm}" />
                        <span asp-validation-for="ParkedVehicle.ParkTime" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>

        <!-- BUTTONS -->
        <div class="d-flex justify-content-between mt-3">

            <a asp-action="Index" class="btn btn-dark-glass">
                Cancel
            </a>

            <button type="submit" class="btn btn-dark-glass">
                Save
            </button>

        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
