@model Garage.ViewModels.CreateOrEditViewModel;

<div class="park-form-card">

    <h3 class="mb-2 fw-bold">Park a Vehicle</h3>
    <p class="text-muted mb-3">Enter vehicle details below</p>

    <hr />

    <form asp-action="Park">

        <div class="row">

            <!-- LEFT SIDE — PHOTO -->
            <div class="col-md-4 mb-4 d-flex flex-column align-items-center justify-content-start">

                <div class="vehicle-photo-box">
                    <span class="placeholder-text">
                        Vehicle Photo<br />
                        (coming soon)
                    </span>
                </div>

            </div>


            <!-- RIGHT SIDE — FORM -->
            <div class="col-md-8">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SelectedVehicleType" class="control-label"></label>
                        <select name="selectedVehicleType"
                                asp-for="SelectedVehicleType"
                                asp-items="Model.VehicleTypeList"
                                class="form-select">
                            <option value="" selected disabled>--- Select vehicle type ---</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Registration" class="control-label"></label>
                        <input asp-for="ParkedVehicle.Registration" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Color" class="control-label"></label>
                        <input asp-for="ParkedVehicle.Color" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Brand" class="control-label"></label>
                        <input asp-for="ParkedVehicle.Brand" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Model" class="control-label"></label>
                        <input asp-for="ParkedVehicle.Model" class="form-control" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ParkedVehicle.Wheels" class="control-label"></label>
                        <input asp-for="ParkedVehicle.Wheels" class="form-control" />
                    </div>

                    <div class="col-12 mb-3">
                        <label asp-for="ParkedVehicle.ParkTime" class="control-label"></label>
                        <input asp-for="ParkedVehicle.ParkTime"
                               class="form-control"
                               type="datetime-local"
                               asp-format="{0:yyyy-MM-ddTHH:mm}" />
                    </div>

                </div>

            </div>

        </div>

        <!-- ACTION BUTTONS -->
        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-dark-glass">Cancel</a>
            <button type="submit" class="btn btn-dark-glass">Park</button>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
