@using Garage.Extensions
@model Garage.ViewModels.GarageStatisticsViewModel

@{
    ViewData["Title"] = "Garage Statistics";
}

<h2 class="mb-4">🚗 Garage Statistics</h2>

<div class="d-flex flex-wrap gap-4 mb-4 justify-content-between">

    <div class="card shadow-sm flex-fill text-center" style="min-width: 250px;">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <h5 class="card-title mb-2">Total Vehicles</h5>
            <p class="display-5 fw-bold mb-0">@Model.TotalVehicles</p>
        </div>
    </div>

    <div class="card shadow-sm flex-fill text-center" style="min-width: 250px;">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <h5 class="card-title mb-2">Total Wheels</h5>
            <p class="display-5 fw-bold mb-0">@Model.TotalWheels</p>
        </div>
    </div>

    <div class="card shadow-sm flex-fill text-center" style="min-width: 250px;">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <h5 class="card-title mb-2">Total Parking Time</h5>
            <p class="fs-4 fw-semibold mb-0">
                @Model.TotalParkedTime.ParkedDurationString()
            </p>
        </div>
    </div>

</div>

<div class="card shadow-sm">
    <div class="card-header fw-bold">
        Vehicles by Type
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var item in Model.VehiclesByType)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@item.Key.GetDisplayName()</span>
                <span class="badge bg-primary rounded-pill">
                    @item.Value
                </span>
            </li>
        }
    </ul>
</div>